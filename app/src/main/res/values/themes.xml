<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/grey_text_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="MyToolbar" parent="Widget.Material3.Toolbar">
        <item name="background">?attr/colorSecondary</item>
    </style>

    <style name="ButtonPrimaryOutlined" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/ButtonTextCaps</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ButtonTextCaps">
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="AppTextAppearance">
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonWhiteOutlined">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="logOut">
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">?attr/colorPrimaryVariant</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextButton" parent="">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInputLayout">
<!--        <item name="colorPrimary">?attr/colorOnSecondary</item>-->
        <item name="colorOnSurface">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="boxBackgroundColor">?attr/colorPrimary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
        <item name="boxStrokeErrorColor">?attr/colorOnPrimary</item>
        <!--        cursor color-->
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInputOnWhiteBackground">
        <item name="android:textColor">@color/grey_text</item>
        <item name="boxBackgroundColor">?attr/colorOnPrimary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">?attr/colorOnSecondary</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <!--        cursor color-->
        <item name="colorControlActivated">@color/grey_text</item>
    </style>

    <style name="TextInputGray">
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="SmallScreenDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <style name="FullScreenDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>

