<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/grey_text_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="colorAccent">#FFC107</item>-->
        <item name="colorOnSurface">@color/grey_text_2</item>

    </style>

    <style name="CapsTextInButton" parent="">
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimaryColor" >
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonOutlined" >
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextButton" parent="">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
<!--        <item name="colorOnSurface">@color/teal_200</item>-->
<!--        <item name="textAppearanceSubtitle1">@style/TextAppearance.AppCompat.Title</item>-->
        <item name="textAppearanceCaption">@style/TextAppearance.AppCompat.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>



    
    <style name="TextInputLayout">
        <item name="colorPrimary">@color/grey_text_2</item>
        <item name="android:textColorHint">@color/grey_text_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxBackgroundColor">@color/blue</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@color/grey_text_2</item>
        <item name="boxStrokeErrorColor">@color/grey_text_2</item>
<!--        cursor color-->
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>